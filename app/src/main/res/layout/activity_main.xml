<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Muzima For Providers"
        android:textColor="#fff"
        android:textSize="30dp" />

    <Button
        android:id="@+id/sendIntentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#55f"
        android:text="Get resource string\n from FHIR app"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/intentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Result: "
        android:textColor="#fff" />

    <EditText
        android:id="@+id/resourceET"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#222"
        android:hint="Text"
        android:textColor="#fff"
        android:textColorHint="#555555" />

    <Button
        android:id="@+id/sendResourceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#55f"
        android:text="Send text to FHIR app"
        android:textColor="#fff"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Person"
            android:background="#55f"
            android:textColor="#fff"
            android:id="@+id/personBtn"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Encounter"
            android:background="#55f"
            android:textColor="#fff"
            android:id="@+id/encounterBtn"/>

    </LinearLayout>

</LinearLayout>